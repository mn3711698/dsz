page {
  background-color: #f5f5f5;
}
.favlist-time {
  width: 50%;
  margin: 0 auto;
  font-weight: lighter;
  height: 120rpx;
  display: flex;
  align-items: center;
}
.favlist-type {
  width: 90%;
  background-color: #fff;
  margin: 0 auto;
  height: 150rpx;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.favlist-type .icon {
  width: 90rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.favlist-type .icon image {
  width: 50rpx;
  height: 50rpx;
}
.favlist-type .imgs {
  width: 150rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.favlist-type .imgs image {
  width: 120rpx;
  height: 120rpx;
  box-shadow: 0 0 5px #f5f5f5;
  border-radius: 4rpx;
}
.favlist-type .type-box {
  width: 410rpx;
  padding-left: 20rpx;
}
.favlist-type .type-box .type-title {
  font-size: 30rpx;
  color: #333;
  padding-bottom: 2rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.favlist-type .type-box .type-author {
  font-size: 26rpx;
  color: #999;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.favlist-type .type-contents-box {
  width: 550rpx;
  padding-left: 20rpx;
}
.favlist-type .type-contents-box .type-title {
  font-size: 30rpx;
  color: #333;
  padding-bottom: 2rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.favlist-type .type-contents-box .type-title text {
  color: #999;
  font-size: 24rpx;
  padding-left: 10rpx;
}
.favlist-type .type-contents-box .type-author {
  font-size: 26rpx;
  color: #666;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.favlist-none {
  width: 80%;
  height: 320rpx;
  margin: 0 auto;
  text-align: center;
  color: #999;
  margin-top: 30%;
}
.favlist-none image {
  width: 300rpx;
  height: 240rpx;
  margin: 0 auto;
  margin-bottom: 20rpx;
}
